{
  "compilerOptions": {
    "target": "es2022",              
    "module": "es2022",           
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",              
    "rootDir": ".",              
    "moduleResolution": "node",     
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"                  
  ]
}
